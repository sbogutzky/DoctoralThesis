journal = {Journal of Sports Science and Medicine},
keywords = {CLS,Coupling,Entrainment,Pacing},
number = {3},
pages = {381--387},
title = {{Effect of adaptive paced cardiolocomotor synchronization during running: A preliminary study}},
volume = {12},
year = {2013}
}
